<Window x:Class="DocsaLabs.Http.Client.Examples.DotNet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" MinWidth="400" MinHeight="200">
    <Grid x:Name="LayoutRoot"  Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0">
            <Label Content="Location" />
            <TextBox x:Name="Location" Text="53.34462,-6.25958"  MaxWidth="200" Margin="10,0" Padding="5"/>
            <Button x:Name="GetStreetView" Content="Get Street View" Margin="10,0,0,0" Padding="5" Click="GetStreetView_Click"/>
        </StackPanel>
        <Image Grid.Row="1" x:Name="StreetViewImage" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>
